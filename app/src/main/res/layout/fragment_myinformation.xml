<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <app.cddic.com.smarter.widget.TopView
        android:id="@+id/myinformation_topView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></app.cddic.com.smarter.widget.TopView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#264c72"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/avatar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="名称：张师傅"
            android:textColor="#FFFFFF"
            android:textSize="11sp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:background="@drawable/users_background"
            android:layout_marginLeft="10dp"
            android:text="一般用户"
            android:textColor="#850000"
            android:textSize="12sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:background="@drawable/setbar_bg"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="@drawable/setbar_bg"
            android:text="性别： 男"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/colorDarkText" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="@drawable/setbar_bg"
            android:text="用户账号：20141215414"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/colorDarkText" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="@drawable/setbar_bg"
            android:text="注册时间：2012/02/02"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/colorDarkText" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/setbar_bg"
            android:drawableRight="@drawable/ic_edit"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="当前状态：在线"
            android:textColor="@color/colorDarkText"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="@drawable/setbar_bg"
            android:text="修改密码"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/colorDarkText"
            android:drawableRight="@drawable/ic_edit"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="10dp"
            android:background="@drawable/setbar_bg"
            android:text="邮箱"
            android:gravity="center_vertical"
            android:textSize="14sp"
            android:textColor="@color/colorDarkText"
            android:drawableRight="@drawable/ic_edit"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:background="@drawable/setbar_bg"
            android:drawableLeft="@drawable/erweima"
            android:paddingLeft="130dp"/>
    </LinearLayout>

</LinearLayout>